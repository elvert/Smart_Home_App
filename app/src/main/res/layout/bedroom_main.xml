<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="411dp"
            android:layout_height="47dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/KitchenTab"
                android:layout_width="119dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/baloo"
                android:text="Kitchen"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="7dp" />

            <TextView
                android:id="@+id/BedroomTab"
                android:layout_width="119dp"
                android:layout_height="37dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="37dp"
                android:layout_marginBottom="8dp"
                android:layout_toStartOf="@+id/KitchenTab"
                android:layout_toEndOf="@+id/toolbar"
                android:fontFamily="@font/baloo"
                android:text="Bedroom"
                android:textColor="#CDB99C"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="7dp" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="33dp"
                android:animationCache="false"
                android:background="#00679792"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:navigationIcon="@drawable/menu" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="273dp"
            android:layout_height="317dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="103dp"
            android:background="#0068A6A0"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:srcCompat="@drawable/bedroom_jpeg" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="411dp"
            android:layout_height="252dp"
            android:layout_marginTop="424dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:clipToPadding="true"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="182dp"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="195dp"
                    android:clipToPadding="true">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="27dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="43dp"
                        android:layout_marginTop="126dp"
                        android:layout_marginEnd="40dp"
                        android:fontFamily="sans-serif-light"
                        android:text="50%"
                        android:textColor="#CDB99C"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="33dp"
                        android:layout_marginBottom="31dp"
                        android:text="Lamp"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        app:fontFamily="@font/aclonica" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="91dp"
                        android:layout_height="85dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="31dp"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/lamp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="182dp"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="true">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="31dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="17dp"
                        android:text="Air Con"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        app:fontFamily="@font/aclonica" />

                    <ImageView
                        android:id="@+id/bus"
                        android:layout_width="75dp"
                        android:layout_height="90dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="17dp"
                        app:srcCompat="@drawable/airconditioner" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="19dp"
                        android:layout_height="17dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="44dp"
                        android:layout_marginEnd="47dp"
                        android:layout_marginBottom="56dp"
                        app:srcCompat="@drawable/thermometer" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="27dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="43dp"
                        android:layout_marginTop="129dp"
                        android:layout_marginEnd="40dp"
                        android:fontFamily="sans-serif-light"
                        android:text="21Â°c"
                        android:textColor="#0099FF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="183dp"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="true">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="93dp"
                        android:layout_height="86dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginEnd="9dp"
                        app:srcCompat="@drawable/fan" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="15dp"
                        android:text="Fan"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        app:fontFamily="@font/aclonica" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textView4"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="27dp"
                        android:layout_marginEnd="28dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Lvl 1"
                        android:textAlignment="center"
                        android:textColor="#CDB99C"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Bedroom"
            android:textColor="#CDB99C"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            app:fontFamily="@font/baloo"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="88dp"
            android:layout_height="77dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:srcCompat="@drawable/power" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="67dp"
            android:layout_height="39dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/aclonica"
            android:text="Mode"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>